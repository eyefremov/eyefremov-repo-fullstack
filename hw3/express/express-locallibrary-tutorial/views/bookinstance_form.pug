extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='imprint') Imprint:
      input#imprint.form-control(type='text', placeholder='Imprint' name='imprint' required value=(undefined===bookinstance ? '' : bookinstance.imprint))
    div.form-group
      label(for='status') Status:
      select#status.form-control(name='status' required)
        option(value='Available') Available
        option(value='Maintenance') Maintenance
        option(value='Loaned') Loaned
        option(value='Reserved') Reserved
    div.form-group
      label(for='due_back') Due back:
      input#due_back.form-control(type='date', name='due_back' value=(undefined===bookinstance ? '' : bookinstance.due_back_formatted))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg